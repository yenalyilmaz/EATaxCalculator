<Window x:Class="SalesCostCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sales and Cost Calculator" Height="350" Width="400">
    <Grid Margin="10">
        <!-- Satış Fiyatı -->
        <Label Content="Sale Price:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox x:Name="SalesTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="225" Margin="119,24,0,0"/>

        <!-- Alış Fiyatı -->
        <Label Content="Buy Price:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0"/>
        <TextBox x:Name="CostTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="225" Margin="119,60,0,0"/>

        <!-- Kâr Oranı -->
        <Label Content="Profit Ratio (%):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0"/>
        <TextBox x:Name="ProfitRatioTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="94" Margin="119,104,0,0"/>

        <!-- Hesapla Butonu -->
        <Button Content="Calculate" HorizontalAlignment="Center" VerticalAlignment="Top" Width="243" Margin="0,150,0,0" Click="CalculateButton_Click"/>

        <!-- Sonuç -->
        <Label x:Name="ResultLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,200,0,0" Width="360" FontWeight="Bold" Foreground="Blue"/>
    </Grid>
</Window>
